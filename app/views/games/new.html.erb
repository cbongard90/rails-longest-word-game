<h1>New game</h1>
<ul class="d-flex">
  <% @letters.each do |letter| %>
  <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post">
    <label for="guess" class="form-label">What is the longest word you can find?</label>
  <div class="d-flex col-6">
    <input type="hidden" name="letters" id="letters" value=<%= @letters.join(',') %>>
    <input type="text" name="guess" id="guess" class="form-control">
    <input type="submit" value="Play!" class="btn btn-primary">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
